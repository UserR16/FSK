local Misc = Tabs.Visual:AddRighttGroupbox("Misc")
Misc:AddDropdown('Material Body', {
Values = {'Plastic','ForceField'},
Default = 1,
Multi = false,
Text = 'Material Body',
Tooltip = 'Material body',
Searchable = true})
Misc:AddSlider('Body Transparency', {
Text = 'Body Transparency',
Default = 0,
Min = 0,
Max = 1,
Rounding = 1,
Compact = false,
FormatDisplayValue = function(slider, value)
if value == slider.Max then return 'Max Transparency' end
if value == slider.Min then return 'None' end
end
Tooltip = "This is slider your body transparency."})
Misc:AddToggle("EnabledBody",{
Text = "Enabled",
Default = false,
Tooltip = "Get the installed features on."})



